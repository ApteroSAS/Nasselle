---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import ImageCarousel from '~/components/widgets/ImageCarousel.astro';
import * as console from "node:console";

const metadata = {
  title: 'NSL Router — NAS Internet Connectivity',
  ignoreTitleTemplate: true,
};

---

<!-- Google tag (gtag.js) -->
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-41BYRP9L1G"></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'G-41BYRP9L1G');
</script>
<script is:inline>
  console.log("executing preflight script");
  document.addEventListener('DOMContentLoaded', function () {
    if (typeof window !== 'undefined') {
      if (window.location.hostname.split('.').length > 2) {
        window.location.href = `/claim/`;
      }
    }
  });
</script>


<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Start for Free',
        href: '/dashboard',
        icon: 'tabler:play',
      },
      {
        text: 'Learn More',
        href: '#features'
      }
    ]}
    image={{ src: '~/assets/images/nasselle-hero-image.png', alt: 'NSL Service Hero Image' }}
  >
    <Fragment slot="title">
      Empower Your Data with <span class="text-accent dark:text-white highlight"> NSL </span> <br/> <span>NAS-as-a-Service</span>
    </Fragment>

    <Fragment slot="subtitle">
    <span class="hidden sm:inline">
      <span class="font-semibold">NSL Router</span> offers seamless, secure, and scalable network-attached storage management solutions.</span
    >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">NSL: Your cloud, your rules.</span>
      Perfect for Tech Enthusiasts, Small to Medium Businesses, and anyone looking to enhance their data management and security.
    </Fragment>
  </Hero>
  
  <!-- Note Widget ******************* -->
  
  <ImageCarousel id="homepage-carousel" items={[
    {
      image: '~/assets/images/casaos/casa-os-screenshot-1.png',
      title: 'CasaOS',
      description: 'CasaOS is a sleek, user-friendly OS for your NAS. It\'s like the command center where you control all your NAS operations easily and efficiently.'
    },
    {
      image: '~/assets/images/casaos/casa-os-screenshot-2.png',
      title: 'App Store',
      description: 'CasaOS comes with an App Store where you can find and install apps to enhance your NAS experience.'
    },
    {
      image: '~/assets/images/casaos/casa-os-screenshot-3.png',
      title: 'File Manager',
      description: 'CasaOS includes a powerful File Manager that allows you to organize and manage your files with ease.'
    }
  ]} interval={5000} isDark={true} />

  <!--<Note />-->

  <!-- Features Widget *************** -->
  <Content
    isReversed
    id="domain"
    tagline="Nas Management"
    title="NSL elevates your NAS experience"
    items={[
      {
        title: 'Free Subdomain',
        description:
          'Each user receives a free subdomain (username.nsl.sh), always available at no cost, perfect for getting started quickly and easily.',
      },
      {
        title: 'Application-Specific Subdomains',
        description:
          'Automatically assign a subdomain for each application deployed on your NAS (app.username.nsl.sh), facilitating easy access from anywhere.',
      },
      {
        title: 'Automated TLS',
        description:
          'Free TLS support across all domains ensures that your NAS services are secure with HTTPS, protecting your data in transit.',
      },
    ]}
    image={{
      src: '~/assets/images/stock-img-A.png',
      alt: 'Secure Networking Illustration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Streamlined Domain Routing</h3>
      <p>
        NSL provides robust domain configuration, ensuring secure and convenient access to your NAS and its services over the internet.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>


  <Content
    id="security"
    items={[
      {
        title: 'End-to-End Encryption',
        description:
          'TLS encryption secures all communications, ensuring your data is protected from eavesdropping and tampering.',
      },
      {
        title: 'DDoS and Bot Protection',
        description:
          'Integrated security measures to safeguard your services against distributed denial of service attacks and malicious bot traffic.',
      },
      {
        title: 'Content Delivery and Caching',
        description:
          'Optimized content delivery and caching mechanisms improve accessibility and reduce latency, enhancing user experience.',
      },
    ]}
    image={{
      src: '~/assets/images/stock-img-B.png',
      alt: 'Data Security Illustration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">HTTPS, TLS and Security</h3>
      <p>
        NSL ensures that your NAS services are not only accessible but also securely accessible.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isReversed
    id="anonymity"
    items={[
    {
      title: 'Invisible on the Web',
      description:
      'Your NAS is not directly exposed to the internet; it connects only through secure tunnels to the NSL servers, ensuring complete privacy.',
      },
    {
      title: 'Secure Tunnels',
      description:
      'Traffic to and from your NAS is routed through encrypted tunnels, isolating it from public access and potential threats.',
      },
    {
      title: 'Anonymity and Privacy',
      description:
      'With NSL’s VPN services, maintain anonymity and protect your identity while accessing or managing your NAS remotely.',
      },
    ]}
    image={{
      src: '~/assets/images/stock-img-C.png',
      alt: 'Privacy Protection Illustration',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Complete Privacy with NSL</h3>
      <p>
        NSL takes privacy seriously, using advanced encryption and secure connections to protect your NAS and ensure it remains your private cloud.
      </p>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    id="getting-started"
    title="Set Up Your NAS with NSL in Just a Few Easy Steps"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Create a Free Account</span>',
        description:
          'Register to claim your exclusive subdomain (username.nasselle.com). This will be your gateway to accessing and managing your NAS online.',
        icon: 'tabler:user-plus',
      },
      {
        title: 'Step 2: <span class="font-medium">Verify NAS Compatibility</span>',
        description:
          'Ensure that your NAS supports Docker, with Docker and Docker Compose installed. This is crucial for the smooth running of the NSL container.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Step 3: <span class="font-medium">Start the NSL Container</span>',
        description:
          'Deploy the NSL container on your NAS. This will integrate your NAS with our cloud, making it accessible via your NSL subdomain.',
        icon: 'tabler:play',
      },
      {
        title: 'Step 4: <span class="font-medium">Access Your NAS</span>',
        description:
          'Log in to your NAS at your custom subdomain (username.nasselle.com) and start managing your data securely and efficiently.',
        icon: 'tabler:login',
      },
    ]}
    image={{
      src: '~/assets/images/stock-img-D.png',
      alt: 'Getting Started Steps Image',
    }}
  >
    <Fragment slot="additional-info">
      <p>For more detailed instructions and setup tips, check out our comprehensive guide on <a href="#" class="text-accent">Medium</a>.</p>
    </Fragment>
  </Steps>


  <!-- Features2 Widget ************** -->

  <Features2
    id="features"
    title="Key Features of NSL"
    subtitle="Explore the powerful capabilities that NSL offers to enhance your NAS experience"
    tagline="Powerful Components"
    items={[
      {
        title: 'CasaOS',
        description: "A sleek, user-friendly OS for your NAS. It's like the command center where you control all your NAS operations easily and efficiently.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Security',
        description:
          "All communications are encrypted using HTTPS, ensuring that your data exchanges are secure from prying eyes. It's like sending your data in an armored vehicle.",
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Anonymity',
        description:
          'Surf and manage your NAS without leaving digital footprints. NSL uses VPN technologies to ensure your activities remain private.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Domain Management',
        description:
          'Easily manage your NAS with a personal domain or a free NSL subdomain. Your gateway to a customized and professional online presence.',
        icon: 'flat-color-icons:database',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>


  
  
  <!-- Stats Widget ****************** -->
  
  <!-- HighlightedPosts Widget ******* -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Now',
        href: '/dashboard',
        target: '_blank',
        icon: 'tabler:play',
      },
    ]}
  >
    <Fragment slot="title">
      Unlock Your NAS Potential <br />with NSL
    </Fragment>

    <Fragment slot="subtitle">
      Step into the future of network-attached storage. Simplify, secure, and scale your data management seamlessly.
    </Fragment>
  </CallToAction>

</Layout>
