---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing - Nasselle NAS Solutions',
};

---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing Plans"
    title="Choose Your Plan"
    subtitle="Find the perfect plan to secure and manage your data."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Pricing Options"
    subtitle="Flexible plans tailored to your needs"
    prices={[
      {
        title: 'Free',
        subtitle: 'Ideal for basic NAS connectivity',
        price: '0',
        period: 'Forever',
        items: [
          { description: 'Username Subdomain' },
          { description: 'Domain Routing' },
          { description: 'CasaOS' },
          { description: 'TLS Security Features (https)' },
          { description: 'Performances (caching)' },
        ],
        hasRibbon: true,
        ribbonTitle: 'Most Popular',
        callToAction: { text: 'Get Started', href: '/dashboard', target: '_blank' },
      },
      {
        title: 'VPN',
        subtitle: 'Enhance your privacy (Soon)',
        price: '10',
        period: 'per month',
        items: [
          { description: 'Custom domain support' },
          { description: 'VPN Tunneling for anonymity' },
        ],
        //callToAction: { text: 'Subscribe Now', href: '/dashboard', target: '_blank' },
        //hasRibbon: true,
        //ribbonTitle: 'Most Popular',
      }
    ]}
  />
  
  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Elevate Your NAS Experience?"
    subtitle="Get started with Nasselle today and transform how you manage and secure your data."
    actions={[{ variant: 'primary', text: 'Get Started', href: '/dashboard', target: '_blank' }]}
  />
</Layout>
