---
// ClaimSubdomain.astro
---

<div id="claim-container" class="claim-container">
  <div class="content">
    <h2>Claim your domain!</h2>
    <p id="message">It looks like <br/><br/>
      <strong id="domain"></strong> <br/><br/>
      isn't claimed yet.</p>
    <button id="claim-button">Claim now!</button>
  </div>
</div>

<script>
  if (typeof window !== 'undefined') {
    const hostname = window.location.hostname;
    document.getElementById('domain').textContent = hostname;
  }

  document.getElementById('claim-button').addEventListener('click', () => {
    window.location.href = 'https://nsl.sh/dashboard/#/getting-started';
  });
</script>

<style>
  /* Full-screen centered layout with no overflow */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  .claim-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background: linear-gradient(135deg, #ff7e5f, #feb47b, #86a8e7, #91eae4);
    background-size: 400% 400%;
    animation: gradientAnimation 10s ease infinite;
  }

  .content {
    max-width: 450px;
    padding: 40px;
    text-align: center;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    animation: fadeInUp 0.6s ease-out;
  }

  h2 {
    font-size: 2.2em;
    margin-bottom: 16px;
    color: #333;
    animation: fadeInUp 0.6s ease-out;
  }

  p {
    font-size: 1.5em;
    margin: 0 0 20px;
    color: #555;
    animation: fadeInUp 0.6s ease-out;
  }

  strong {
    font-size: 1.5em;
    color: #061da6;
  }

  button {
    background: linear-gradient(135deg, #ff7e5f, #feb47b);
    color: #fff;
    border: none;
    padding: 14px 28px;
    cursor: pointer;
    font-size: 1.2em;
    font-weight: bold;
    border-radius: 8px;
    transition: background 0.3s, transform 0.2s;
    animation: fadeInUp 0.6s ease-out;
  }

  button:hover {
    background: linear-gradient(135deg, #feb47b, #ff7e5f);
    transform: translateY(-2px);
  }

  button:active {
    box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.2);
    transform: translateY(1px);
  }

  .spinner {
    border: 4px solid rgba(0, 0, 0, 0.1);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border-left-color: #0070f3;
    animation: spin 1s linear infinite;
    margin: 10px auto 0;
  }

  /* Hover scale effect for content */
  .content:hover {
    transform: scale(1.02);
    transition: transform 0.3s ease;
  }

  /* Fade-in and animation styles */
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Gradient background animation */
  @keyframes gradientAnimation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  /* Spinner animation */
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
